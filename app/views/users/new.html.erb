<h1> Signup </h1>
     
    <%= form_for :user, url: '/users' do |f| %>
        <div class="form_fields">
            <%= f.label :email %>
            <%= f.email_field :email %> 
        </div>

        <div class="form_fields">
            <%= f.label :password %>
            <%= f.password_field :password %><br>
        </div>

        <div class="form_fields">   
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
        </div>

        <%= f.submit "Create Account" %>

    <% end %>


