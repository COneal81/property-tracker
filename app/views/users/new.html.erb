<h1> Signup </h1>
     
    <%= form_for(@user) do |f| %>
        <div class="form_fields">
            <%= f.label :email %>
            <%= f.text_field :email %> 
        </div>

        <div class="form_fields">
            <%= f.label :password %>
            <%= f.text_field :password %><br>
        </div>

        <div class="form_fields">   
            <%= f.label :password_confirmation %>
            <%= f.text_field :password_confirmation %>
        </div>

        <%= f.submit "Create Account" %>
        
    <% end %>


